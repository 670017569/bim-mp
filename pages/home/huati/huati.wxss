/* pagesComponents/homeComponents/huati/huati.wxss */
/* 话题 */
.pages{
  width: 100%;
  height: 1600rpx;
}
.searchInput{
  display: flex;
  width: 82%;
  height: 80rpx;
  margin-top: 10rpx;
  margin-left: 70rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  
}
.searchInput_navigator{
  display: flex;
  height: 100%;
  width: 100%;
  justify-content: center;
  align-items: center;
  background-color: #5494E6;
  border-radius: 40rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 32rpx;
  color:#fff;
}
.huati_main{
  padding: 24.3rpx 36.2rpx;
  border-bottom: 1.81rpx solid #ddd;
}
.img{
    float: left;
}
.portrait{
  width: 88.69rpx;
  height: 85.07rpx;
  border-radius: 25px;
}
.nickName{
  float: left;
  font-size: 36.2rpx;
  height: 90.5rpx;
  margin-left: 36.2rpx;
}
.huatiItem{
  border-bottom: 1px solid #ddd;
  padding-bottom: 10px;
  margin-bottom: 5px
}
.title{
  min-height: 70rpx;
  font-size: 45rpx;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;

}
.van-cell-text{
  width: 400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.bottomText{
  margin-top: 50rpx;
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
}
.topicCms,
.topicClick{
  float: right;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  margin-right: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  transform: translateY(-15rpx);
}

.topicCms>icon,
.topicClick>icon {
  transform: translateY(3rpx);
  margin-right: 8rpx;
}
/* 话题结束 */