.page{
  background-color: #e9e9e9;
}
.search_row{
  height: 110rpx;
  padding: 20rpx; 
  
}
form{
  display: block;
}
input{
    width: 76%;
    float: left;
    display: inline-block;
    height:30px;
    background-color: white;
    padding-left: 20rpx;
    margin-right: 30rpx;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 30rpx;
    border-radius: 20rpx;
  }
button{
  display: inline-block;
  float: right;
  width: 110rpx;
  height: 100%;
  font-size: 28rpx;
  padding: 0;
  justify-content: center;
  align-items: center;
  margin-bottom: 5rpx;
}

.topic{
  margin-top: 20rpx;
  float: left;
  width: 100%;
}

.topic_top{
  float: left;
  width: 100%;
  display: block;
}
.img{
    float: left;
    margin-left: 20rpx;
}
.portrait{
  width: 88.69rpx;
  height: 85.07rpx;
  border-radius: 25px;
}
.nickName{
  width: 300rpx;
  float: left;
  font-size: 36.2rpx;
  height: 90.5rpx;
  margin-left: 10rpx;
}
.publishTime{
  font-size: 25rpx;
  color:  #999;
}
.title{
  margin-left: 20rpx;
  width: 95.5%;
  float: left;
  font-size: 45rpx;
  line-height: 70rpx;
  display: block;

}
.bottomText{
  float: right;
  margin-top: 10rpx;
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
}
.topicCms,.topicClick{
  float: right;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  margin-right: 50rpx;
}