/* pagesComponents/homeComponents/xuetang/xuetang.wxss */
/* 学堂 */
.pages{
  width: 100%;
  height: 1600rpx;
}
.fenge{
  width: 100%;
  border-bottom: 3rpx #dedede solid;
}
.clear{
  clear: both;
}
.xuetang_container{
  width: 100%;
  height: 37%;
}
.container_top{
  width: 100%;
  background-color: whitesmoke;
  float: left;
  border-bottom: 2rpx #dedede solid;
  padding: 10rpx 0;
}
.xuetang_hot{
  height: 100%;
  width: 35%;
  padding-left: 20rpx;
  float: left;
  display: inline-block;
  font-weight:700;
  font-family:SimHei;
}
.xuetang_more{
  width: 25%;
  float: right;
  display: inline-block;
  font-size:30.76rpx;
  color:#747474;
  font-family:SimHei;
}

/* 案例 */
.cases_main{
  display: flex;
  width: 100%;
  height: 60%;
}
.cases_main_img{
  flex: 1;
  margin: 0;
  padding: 0;
  display: inline-block;
  height: 100%;
}

.cases_foot{
  width: 100%;
  height: 20%;
}
.cases_foot_text1{
  display: block;
  width: 100%;
  height: 55%;
  margin-top: 5rpx;
  margin-left: 20rpx;
  font-size:36.12rpx;

}
.cases_foot_text2{
  display: block;
  width: 95%;
  height: 45%;
  margin-left: 20rpx;
  color:#747474;
  font-size:32.42rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  word-wrap: nowrap;
}
/* 案例 */


/* 软件 */
.software_main{
  width: 250rpx;
  height: 250rpx;
  padding: 20rpx;
  float: left;
}
.software_main_img{
  height: 80%;
}
.software_main_content{
  font-size: 30rpx;
  text-align: center;
  padding-top: 10rpx;
  /* color: #fff; */
}

.software_info{
  float: left;
  display:block;
  height: 45%;
  width: 100%;
  padding-left: 10rpx;
  color:#747474;
  font-size:32.42rpx;
}
/* 软件 */

/* 课程 */
.class_main{
  float: left;
  display:flex;
  width: 100%;
  height: 45%;
}
.class_main_info{
  flex: 1;
  display: flex;
  width: 49%;
  height: 100%;
  flex-direction:column;
}
.class_main_info_img{
  flex: 1;
  width: 80%;
  height: 65%;
  margin: 0 20rpx;
}
.class_title{
  margin-left: 20rpx;
  font-size:36.12rpx;
}
.class_content{
  color:#747474;
  font-size:32.42rpx;
  margin-left:20rpx;
  margin-right: 40rpx;
}
.news{
  margin-top: 15rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  display: flex;
  width: 95%;
  height: 220rpx;
}
.news_info{
  display: inline-block;
  flex: 1;
  height: 95%;
  width: 50%;
  padding: 10rpx 20rpx 0 10rpx;
  position: relative;
}
.newsTitle{
  padding: 5rpx 0;
  width: 95%;
  margin-top: 5rpx;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: inline-block;
}
.newsContent{
  font-size: 25rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.news_other_info{
  margin-top: 10rpx;
  position: absolute;
  bottom: 0;
}
.news_other_info text{
  display: inline-block;
  margin: 10rpx 25rpx 0 0;
  font-size: 25rpx;
  color: #999898;
}
.news_img{
  height: 100%;
  width: 35%;
  display: inline-block;
}
.news_fenge{
  border-bottom: 2rpx #dedede solid;
  width: 95%;
  margin-left: 20rpx;
  margin-top: 5rpx;
}
/* 课程 */
/* 学堂结束 */
