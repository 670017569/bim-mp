.xuetang_container{
  width: 100%;
  height: 468rpx;
  border-bottom: 3rpx solid #ddd;
  margin-bottom: 5px;
}
.cases_main{
  display: flex;
  width: 100%;
  height: 75%;
}
.cases_main_img{
  flex: 1;
  display: flex;
  margin: 0;
  padding: 0;
  display: inline-block;
  float: left;
  height: 100%;
}

.cases_foot{
  width: 100%;
  height: 20%;
}
.cases_foot_text1{
  display: -webkit-box;
  width: 95%;
  height: 55%;
  margin-top: 5rpx;
  margin-left: 20rpx;
  font-size: 36.12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.cases_foot_text2{
  display: block;
  width: 95%;
  height: 45%;
  margin-left: 20rpx;
  color:#747474;
  font-size:32.42rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  word-wrap: nowrap;
}