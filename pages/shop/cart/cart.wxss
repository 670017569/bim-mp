/* pages/classify/cart/cart.wxss */
.item{
  display: flex;
  direction: row;
  width: 710rpx;
  margin: 20rpx;
  border: 1rpx solid orange;
}
.item image{
  margin: 20rpx;
  height: 140rpx;
  width: 140rpx;
}
.desc{
  margin-top: 10rpx;
  font-size: 40rpx;
}
.buy{
  padding: 20rpx;
  background-color: #eee;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  direction: row;
}
.money{
  font-size: 45rpx;
  color: orange;
  margin-left: 40rpx; 
}
.buynow{
  position: fixed;
  right: 40rpx;
  padding: 5rpx;
  background: red;
  border-radius: 10%; 
}
.desc-money{
  margin-top: 20rpx;
  font-size: 35rpx;
  color: orange;
}

.goodsItem{
  width: 100%;
  height: 260rpx;
  margin-top: 5rpx;
}
.choose{
  float: left;
  width: 10%;
  position: relative;
  top: 30%;
  padding: 0 2%;
}
.goodsCard{
  float: left;
  width: 90%;
}
.itemTop{
  width: 100%;
  height: 100%;
}