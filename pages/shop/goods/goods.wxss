/* pages/detail/detail.wxss */
@import "../../../wxParse/wxParse.wxss";


.main{
  margin: 20px 40rpx 60px;
}

.item-name{
  margin-top: 0 52rpx;
  font-size: 48rpx;
}

.item-price{
  margin-top: 24rpx;
  font-size: 44rpx;
}

.van-goods-action{
  right: 0;
  left: 0;
  bottom: 0;
}

/* 弹出 */
.title{
  height: 50rpx;
  line-height: 50rpx;
  color: #999;
}
.paramValue{
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  margin: 10rpx;
  color: #fff;
  font-size: 25rpx;
}
.paramValue:hover{
  background-color: #5495E6;
  color: #fff;
}
.amount{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.amount_value{
  display: inline-block;
  position: relative;
  text-align: right;
  margin-left: 200rpx;
}
.amount_title{
  display: inline-block;
  color: #999;
  position: relative;
  text-align: left;
}