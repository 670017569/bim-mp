/* pages/comment/comment.wxss */
.comment-main{
  margin: 0 40rpx;
}
.comment-all{
  margin-top: 40rpx;
  font-size: 52rpx;
}
.comment-header{
  display: inline-block;
  border-radius: 50%;
  max-height: 80rpx;
  max-width: 80rpx;
}
.comment{
  margin-top: 24rpx;
}
.user-name{
  display: inline-block;
  margin-left: 24rpx;
  margin-top: 24rpx;
  font-size: 32rpx;
}
.user-focus{
  display: inline-block;
  position: absolute;
  left: 600rpx;
  margin-top:4rpx; 
  padding: 16rpx 26rpx;
  border-radius: 12rpx; 
  background-color: #AAFFFF;
  font-size: 32rpx;
  color: #25B9B9;
}
.comment-row{
  display: flex;
  flex-direction: row;
}
.comment-img{
  display: flex;
  flex-direction: row;
}
.comment-img image{
  margin-top: 24rpx;
  max-height: 210rpx;
  max-width: 210rpx;
  margin-right: 20rpx;
}
.comment-text{
  font-size: 32rpx;
}
.publish-time{
  font-size: 28rpx;
  color: gray;
  margin-top: 32rpx;
}
.line{
  margin-top: 24rpx;
  border: 1rpx solid #CCCCCC; 
}
