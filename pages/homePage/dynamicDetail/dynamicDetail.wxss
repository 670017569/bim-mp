/* pages/homePage/dynamicDetail/dynamicDetail.wxss */
.dongtai_content{
  padding: 15rpx 20rpx;
}
.dongtai_content_top{
  display: flex;
  width: 100%;
  height: 120rpx;
}
.dongtai_content_top_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.dongtai_content_top_info{
  padding-left: 20rpx;
  display: inline-block;
  flex: 1;
  width: 25%;
  color: #6083a3;
}
.dongtai_content_top_time{
  font-size: 25rpx;
  display: block;
  margin-top: 20rpx;
}
.dongtai_content_top_notice{
  margin-top: 30rpx;
  margin-right: 40rpx;
  width: 150rpx;
  display: inline-block;
  height: 55rpx;
  border-radius: 20rpx;
  color:#6083a3 ;

  font-size: 25rpx;
}
.attention{
  float: right;
  margin-right: 36.2rpx;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  background: #5495E6;
  color: #fff;
  padding: 0 5rpx;
}
.writing{
  margin-top: 20rpx;
  width: 100%;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 36rpx;
}
.pictures{
  width: 100%;
  margin-top: 20rpx;
}
.pictures_img{
  width: 100%;
  height: 400rpx;
  display: block;
  margin-bottom: 20rpx;
}

.pl_txtandimg{
  display: flex;
  flex-direction: row;
}
.pl_img{
  margin-left: 10rpx;
  font-weight: 500;
  color:#5494E6;
}
.pl_txt{
  font-size: 36.12rpx;
  margin-left: 10rpx;
}

.com_list{
  display: flex;
  flex-direction: row;
  margin-left: 10rpx;
  width: 100%;
  margin-top: 10rpx;
  font-size: 34rpx;
}
.userAvatar{
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  border-radius: 25px;
}
.comRight{
  margin-left: 15rpx;
  margin-top: 3rpx;
  padding-bottom: 5rpx;
  height: 100%;
  width: 100%;
  display: inline-block;
  border-bottom: 1rpx #e4e3e3 solid;
}

.comRight_top{
  display: flex;
  flex-direction: row;
  width: 97%;
}
.comRight_top button{
  text-align: center;
  margin: auto;
  padding-bottom: 4rpx;
  display: table;
}
.comRight_nickName{
  display: block;
  color: #5494E6;
  width: 100%;
  font-size: 33rpx;
}
.comInfo{
  margin-left: 20rpx;
  display: inline-block;
  margin-top: 5rpx;
  color:  #b8b7b7;
  font-size: 26rpx;
}



.submit{
  width: 20%;
  font-size: 42.12rpx;
  background-color: white;
  display: flex;
  justify-content: center; 
  align-items: center;
}
.pl_row{
  height: 40rpx;
  width: 100%;
  display: flex;
  padding: 20rpx 0; 
  margin-bottom: 20rpx;
}
.pl_row input{
  width: 580rpx;
  height:60rpx;
  background-color: white;
  margin-left: 20rpx;
  margin-right: 10rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 30rpx;
  border: 1rpx solid #d0d0d0;
  border-radius: 20rpx;
}
.search_row{
  height: 60rpx;
  display: flex;
  padding: 20rpx 0; 
  
}

button{
  height: 65rpx;
  width: 110rpx;
  font-size: 28rpx;
  padding: 0;
  justify-content: center;
  align-items: center;
}


.content_img{
  width: 100%;
}
.img_item{
  width: 200rpx;
  height: 200rpx;
  /* background: blue; */
  background: no-repeat center center/100% auto;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  float: left;
  position: relative;
  overflow: hidden;
}
.image{
  width: 100%;
  height: 100%;
  display: block;
}
.img_urls{
  width: 100%;
  height: auto;
  overflow: hidden;
}

/* 二级评论 */
.lowCom{
  background-color:  rgb(226, 227, 228);
  padding: 10rpx;
  width: 90%;
  margin-right: 15rpx;
  margin-left: 20rpx;
}
.comRight_nickName text{
  color:  #4d4848;
  font-size: 28.5rpx;
}
.moreCom{
  background-color:  rgb(226, 227, 228);
  padding: 10rpx;
  width: 90%;
  margin-right: 15rpx;
  margin-left: 20rpx;
  font-size: 25rpx;
  color:  #6e6d6d;
}
.lowDelButton{
  display: inline-block;
  
}