/**index.wxss**/

.tabs{
  display: flex;
  padding:10rpx 15%;
  height: 80rpx;
}
.title_item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32.76rpx;
}
.active{
  color: #5494E6;
  border-bottom: 4rpx solid currentColor;

}

.msg-item{
  height: 140rpx;
  display: flex;
  direction: row;
  padding-bottom: 20rpx;
  border-bottom: 2rpx #eee solid;
}

.msg-item image{
  display: inline-block;
  margin: 20rpx;
  height: 100rpx;
  width: 100rpx;
}
.msg-title{
  font-size: 50rpx;
  display: flex;
  direction: column;
  width: 600rpx;
}
.msg-brief{
   margin-top: 15rpx;
   font-family:  'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
   font-size: 33rpx;
}
.aite{
  margin-top: 46rpx;
  margin-left: 30rpx;
}



.pages{
  width: 100%;
  height: 1600rpx;
}
.fenge{
  width: 100%;
  border-bottom: 3rpx #dedede solid;
}
.clear{
  clear: both;
}




/* 话题 */
.searchInput{
  display: flex;
  width: 82%;
  height: 80rpx;
  margin-top: 10rpx;
  margin-left: 70rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  
}
.searchInput_navigator{
  display: flex;
  height: 100%;
  width: 100%;
  justify-content: center;
  align-items: center;
  background-color: #5494E6;
  border-radius: 40rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 32rpx;
  color:#fff;
}
.huati_main{
  padding: 24.3rpx 36.2rpx;
  border-bottom: 1.81rpx solid #ddd;
}
.img{
    float: left;
}
.portrait{
  width: 88.69rpx;
  height: 85.07rpx;
  border-radius: 25px;
}
.nickName{
  float: left;
  font-size: 36.2rpx;
  height: 90.5rpx;
  margin-left: 36.2rpx;
}
.huatiItem{
  border-bottom: 1px solid #ddd;
  padding-bottom: 10px;
  margin-bottom: 5px
}
.title{
  min-height: 70rpx;
  font-size: 45rpx;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;

}
.bottomText{
  margin-top: 50rpx;
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
}
.topicCms,.topicClick{
  float: right;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  margin-right: 50rpx;
}
/* 话题结束 */




/* 动态 */
.mypublish{
  padding: 12.7rpx 0;
}
.dyportrait{
  border-radius: 25px;
  margin-left: 36.2rpx;
  width: 88.69rpx;
  height: 85.07rpx;
}
.content{
  padding: 0 27.15rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  min-height: 112rpx;
  margin-left: 10rpx;
}
.content_img image{
  float: left;
  padding: 9.05rpx;
}
.content_img{
  width: 100%;
  padding: 0 27.15rpx;
}
.img-item{
  width: 198.9rpx;
  height: 198.9rpx;
  float: left;
  margin: 11.7rpx;
  overflow: hidden;
  position: relative;
}
.img-item image{
  height: 100%;
  width: 100%;
  max-height: 198.9rpx;
  max-width: 198.9rpx;
  text-align: center;
}
.item{
  padding-top: 10rpx;
  border-bottom: 1px solid #ddd;
  padding-bottom: 7.02rpx;
  margin-bottom: 11.7rpx;
}

.img_urls{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.img_item{
  width: 225rpx;
  height: 225rpx;
  /* background: blue; */
  background: no-repeat center center/100% auto;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  float: left;
  position: relative;
  overflow: hidden;
}
.image{
  width: 100%;
  height: 100%;
  display: block;
}

.attention{
  float: right;
  margin-right: 36.2rpx;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  background: #5495E6;
  color: #fff;
  padding: 0 5rpx;
}
.goodAndComment{
  padding: 0 30rpx;
}
.goodAndComment button{
  width: 48.6%;
  float: left;
  margin-right: 5rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 35rpx;
  background-color: #fff;

}
.dynamicTime{
  font-size: 25rpx;
  color: #C4C5C5;
  margin-top: 10rpx;
}
/* 动态结束 */





/* 头条开始 */
.lunbo{
  width: 100%;
  text-align: center;
}
.news_tab{
  display: flex;
  width: 100%;
  height: 100rpx;
}
.tab_hot_news{
  display: flex;
  flex: 1;
  height: 100%;
  width: 50%;
  justify-content: center;
  align-items: center;
  border-bottom:4rpx solid #5494E6;
  color: #5494E6;
  font-size: 33rpx;
}
.tab_all_news{
  display: flex;
  flex: 1;
  height: 100%;
  width: 50%;
  justify-content: center;
  align-items: center;
  font-size: 33rpx;
}
.news{
  margin-top: 15rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  display: flex;
  width: 95%;
  height: 220rpx;
}
.news_info{
  display: inline-block;
  flex: 1;
  height: 95%;
  width: 50%;
  padding: 10rpx 20rpx 0 10rpx;
  position: relative;
}
.newsTitle{
  padding: 5rpx 0;
  width: 95%;
  margin-top: 5rpx;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: inline-block;
}
.newsContent{
  font-size: 25rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.news_other_info{
  margin-top: 10rpx;
  position: absolute;
  bottom: 0;
}
.news_other_info text{
  display: inline-block;
  margin: 10rpx 25rpx 0 0;
  font-size: 25rpx;
  color: #999898;
}
.news_img{
  height: 100%;
  width: 35%;
  display: inline-block;
}
.news_fenge{
  border-bottom: 2rpx #dedede solid;
  width: 95%;
  margin-left: 20rpx;
  margin-top: 5rpx;
}




.left_menu{
  /*display: inline-block;*/
  float: left;
  height: 100%;
  width: 18.5%;
  border-right: 3rpx #dedede solid;
}
.right_content{
  /*display: inline-block;*/
  padding-left: 15rpx;
  float: left;
  height: 100%;
  width: 78%;
}

.menu_item{
  padding: 12% 14%;
  height: 70rpx;
  width: 100%;
  display: inline-block;
  justify-content: center;
  align-items: center;
  font-size: 30.5rpx;
  background-color: whitesmoke;
}
