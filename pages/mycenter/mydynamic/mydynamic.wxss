/* pages/mycenter/mydynamic/mydynamic.wxss */
.mypublish{
  padding: 54.3rpx 0;
  border-top: 1.81rpx solid #ddd;
}
.img{
  margin-left: 36.2rpx;
  float: left;
}
.portrait{
  width: 88.69rpx;
  height: 85.07rpx;
}
.nickName{
  float: left;
  font-size: 36.2rpx;
  height: 90.5rpx;
  margin-left: 36.2rpx;
}
.clear{clear: both;}
.content{
  padding: 0 27.15rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  min-height: 70rpx;
  /* min-height: 112rpx; */
}
.content_img image{
  float: left;
  padding: 9.05rpx;
}
.content_img{
  width: 100%;
  padding: 0 27.15rpx;
}
.img-item{
  width: 198.9rpx;
  height: 198.9rpx;
  float: left;
  margin: 11.7rpx;
  overflow: hidden;
  position: relative;
}
.img-item image{
  height: 100%;
  width: 100%;
  max-width: 198.9rpx;
  text-align: center;
}
.item{
  border-bottom: 1px solid #ddd;
  padding-bottom: 7.02rpx;
  margin-bottom: 11.7rpx;
}

.img_urls{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.img_item{
  width: 225rpx;
  height: 225rpx;
  /* background: blue; */
  background: no-repeat center center/100% auto;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  float: left;
  position: relative;
  overflow: hidden;
}
.image{
  width: 100%;
  height: 100%;
  display: block;
}

.ellipsis{
  float: right;
  margin-right: 36.2rpx;
  width: 100rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.goodAndComment{
  padding: 0 30rpx;
}
.goodAndComment button{
  width: 48.6%;
  float: left;
  margin-right: 5rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 35rpx;
  background-color: #fff;

}
.dynamicTime{
  font-size: 25rpx;
  color: #C4C5C5;
  margin-top: 10rpx;
}