/* pages/myaddress/myaddress.wxss */
page {
  background: #f5f5f5;
  padding-bottom: 165rpx;
}

.box {
  width: 125%;
  display: flex;
  flex-direction: row;
  position: relative;
}

.content {
  width: 90%;
  padding: 18.1rpx;
  height: 120rpx;
  font-size: 28.96rpx;
  background: #fff;
  margin: 9.05rpx 0;
}

.name {
  display: inline-block;
}

.default {
  display: inline-block;
  color: #5495E6;
  font-size: 25.34rpx;
  border: 1.81rpx solid #5495E6;
  padding: 0 9.05rpx;
  margin-left: 18.1rpx;
}

.address {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 9.05rpx;
}

.phonenumber {
  float: right;
}

.dot_box {
  width: 10%;
  background-color: #fff;
  float: right;
  margin: 9.05rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.dot {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  margin: 3rpx 10rpx 3rpx 0rpx;
  background-color: #ccc;
}

.delete {
  width: 25%;
  height: 120rpx;
  line-height: 120rpx;
  margin: 9.05rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete image {
  width: 60rpx;
}