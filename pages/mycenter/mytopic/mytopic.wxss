/* pages/mycenter/mytopic/mytopic.wxss */
.mypublish{
  padding: 54.3rpx 36.2rpx;
  border-top: 1.81rpx solid #ddd;
}
.img{
    float: left;
}
.portrait{
  width: 88.69rpx;
  height: 85.07rpx;
}
.nickName{
  float: left;
  font-size: 36.2rpx;
  height: 90.5rpx;
  margin-left: 36.2rpx;
}
.clear{clear: both;}
.item{
  border-bottom: 1px solid #ddd;
  padding-bottom: 10px;
  margin-bottom: 5px
}
.title{
  min-height: 70rpx;
  font-size: 45rpx;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;

}
.bottomText{
  margin-top: 50rpx;
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
}
.topicCms,.topicClick{
  float: right;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  margin-right: 50rpx;
}
.city{
  float: left;
  margin-right: 20rpx
}
.tptime
{
  float: right;
}
.dynamicTime{
  font-size: 25rpx;
  color: #C4C5C5;
  margin-top: 10rpx;
}
/* 删除按钮 */
.ellipsis{
  float: right;
  width: 100rpx;
  height: 70rpx;
  line-height: 70rpx;
}